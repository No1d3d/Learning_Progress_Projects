#include <iostream>

int main() {
  std::string text;
  std::cout << "Please, enter something   ";
  std::getline(std::cin, text);

  int words = 0;

  if (text.length() > 0 && text[0] != ' '){
    words++;
  }

  for(int i = 1; i < text.length(); i++){
    if (text[i] != ' ' && text[i-1] == ' '){
      words++;
    }
  }
  std::cout << "The entered text has " << words << "words.";
}
