#include <iostream>

int main() {
  float transmission[10] = {1.1, 2.1, 3.1, 4.1, 5.1, 6.1, 7.1, 8.1, 9.1, 10.1};
  std::cout << "List of working radio frequencies: 1.1, 2.1, 3.1, 4.1, 5.1, 6.1, 7.1, 8.1, 9.1, 10.1\n\n\n";

  while (true){
    
    int choice;
    std::cout << "Please, enter a desired radio frequency: ";
    std::cin >> choice;
    if (choice == 0){
      std::cout << "Radio off!";
      break;
    }
    while (choice < 0 || choice > 10){

      std::cout << "There is no such frequency on the radio! Please, try again.\n";
      std::cout << "Please, enter a desired radio frequency: ";
      std::cin >> choice;
      
    }
    std::cout << "Now playing frequency " << transmission[choice-1] << std::endl;
  }
}
