#include <iostream>

int main() {
  for(int y = 0; y < 20; y++){
    for(int x = 0; x < 50; x++){
      if (y == 10 && x == 25){
        std::cout << "+";
      } else if (y == 0 && x == 25){
        std::cout << "^";
      } else if (x == 49 && y == 10){
        std::cout << ">";
      } else if (y == 10){
        std::cout << "-";
      } else if (x == 25){
        std::cout << "|";
      } else {
        std::cout << " ";
      }
    }
    std::cout << "\n";
  }
}
