#include <iostream>

int main() {
  int h;
  std::cout << "Введите высоту треугольника:   ";
  std::cin >> h;

  for (int lines = 0; lines < h; lines++){
    for (int symbol = 0; symbol < 2 * h - 1; symbol++){
      if (symbol < h - lines - 1){
        std::cout << " ";
      } else if (symbol < h + lines) {
      std::cout << "#";
      }
    }
    std::cout << "\n";
  }
}
