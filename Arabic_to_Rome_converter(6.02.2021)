#include <iostream>

int main() {
  int number;

  std::cout << "Please, enter a number:   ";
  std::cin >> number;

  while (number < 1 || number > 3999){
    std::cout << "Invalid input!\nThe number must be a positive integer and can not be less than 1 or greater than 3999!\n";
    std::cout << "Please, enter a number:   ";
    std::cin >> number;
  }

  std::string numString;
  int thousands = number / 1000;
  int hundreds = (number - thousands * 1000) / 100;
  int tens = (number - thousands * 1000 - hundreds * 100) / 10;
  int singles = number - thousands * 1000 - hundreds * 100 - tens * 10;

  std::string result = " ";

  if (number > 999){
    numString = "0000";
    numString[0] += thousands;
    numString[1] += hundreds;
    numString[2] += tens;
    numString[3] += singles;
  } else if (number > 99){
    numString = "000";
    numString[0] += hundreds;
    numString[1] += tens;
    numString[2] += singles;
  } else if (number > 9){
    numString = "00";
    numString[0] += tens;
    numString[1] += singles;
  } else if (number >= 1){
    numString = "0";
    numString[0] += singles;
  }



  if (numString.length() == 4){


    if (numString[3] == '1'){
      result = "I";
    } else if (numString[3] == '2'){
      result = "II";
    } else if (numString[3] == '3'){
      result = "III";
    } else if (numString[3] == '4'){
      result = "IV";
    } else if (numString[3] == '5'){
      result = "V";
    } else if (numString[3] == '6'){
      result = "VI";
    } else if (numString[3] == '7'){
      result = "VII";
    } else if (numString[3] == '8'){
      result = "VIII";
    } else if (numString[3] == '9'){
      result = "IX";
    }
    if (numString[2] == '1'){
      result = "X" + result;
    } else if (numString[2] == '2'){
      result = "XX" + result;
    } else if (numString[2] == '3'){
      result = "XXX" + result;
    } else if (numString[2] == '4'){
      result = "XL" + result;
    } else if (numString[2] == '5'){
      result = "L" + result;
    } else if (numString[2] == '6'){
      result = "LX" + result;
    } else if (numString[2] == '7'){
      result = "LXX" + result;
    } else if (numString[2] == '8'){
      result = "LXXX" + result;
    } else if (numString[2] == '9'){
      result = "XC" + result;
    }
    if (numString[1] == '1'){
      result = "C" + result;
    } else if (numString[1] == '2'){
      result = "CC" + result;
    } else if (numString[1] == '3'){
      result = "CCC" + result;
    } else if (numString[1] == '4'){
      result = "CD" + result;
    } else if (numString[1] == '5'){
      result = "D" + result;
    } else if (numString[1] == '6'){
      result = "DC" + result;
    } else if (numString[1] == '7'){
      result = "DCC" + result;
    } else if (numString[1] == '8'){
      result = "DCCC" + result;
    } else if (numString[1] == '9'){
      result = "CM" + result;
    }
    if (numString[0] == '1'){
      result = "M" + result;
    } else if (numString[0] == '2'){
      result = "MM" + result;
    } else if (numString[0] == '3'){
      result = "MMM" + result;
    }

  
  } else if (numString.length() == 3){


    if (numString[2] == '1'){
      result = "I";
    } else if (numString[2] == '2'){
      result = "II";
    } else if (numString[2] == '3'){
      result = "III";
    } else if (numString[2] == '4'){
      result = "IV";
    } else if (numString[2] == '5'){
      result = "V";
    } else if (numString[2] == '6'){
      result = "VI";
    } else if (numString[2] == '7'){
      result = "VII";
    } else if (numString[2] == '8'){
      result = "VIII";
    } else if (numString[2] == '9'){
      result = "IX";
    }
    if (numString[1] == '1'){
      result = "X" + result;
    } else if (numString[1] == '2'){
      result = "XX" + result;
    } else if (numString[1] == '3'){
      result = "XXX" + result;
    } else if (numString[1] == '4'){
      result = "XL" + result;
    } else if (numString[1] == '5'){
      result = "L" + result;
    } else if (numString[1] == '6'){
      result = "LX" + result;
    } else if (numString[1] == '7'){
      result = "LXX" + result;
    } else if (numString[1] == '8'){
      result = "LXXX" + result;
    } else if (numString[1] == '9'){
      result = "XC" + result;
    }
    if (numString[0] == '1'){
      result = "C" + result;
    } else if (numString[0] == '2'){
      result = "CC" + result;
    } else if (numString[0] == '3'){
      result = "CCC" + result;
    } else if (numString[0] == '4'){
      result = "CD" + result;
    } else if (numString[0] == '5'){
      result = "D" + result;
    } else if (numString[0] == '6'){
      result = "DC" + result;
    } else if (numString[0] == '7'){
      result = "DCC" + result;
    } else if (numString[0] == '8'){
      result = "DCCC" + result;
    } else if (numString[0] == '9'){
      result = "CM" + result;
    }


  } else if (numString.length() == 2) {


    if (numString[1] == '1'){
      result = "I";
    } else if (numString[1] == '2'){
      result = "II";
    } else if (numString[1] == '3'){
      result = "III";
    } else if (numString[1] == '4'){
      result = "IV";
    } else if (numString[1] == '5'){
      result = "V";
    } else if (numString[1] == '6'){
      result = "VI";
    } else if (numString[1] == '7'){
      result = "VII";
    } else if (numString[1] == '8'){
      result = "VIII";
    } else if (numString[1] == '9'){
      result = "IX";
    } 
    if (numString[0] == '1'){
      result = "X" + result;
    } else if (numString[0] == '2'){
      result = "XX" + result;
    } else if (numString[0] == '3'){
      result = "XXX" + result;
    } else if (numString[0] == '4'){
      result = "XL" + result;
    } else if (numString[0] == '5'){
      result = "L" + result;
    } else if (numString[0] == '6'){
      result = "LX" + result;
    } else if (numString[0] == '7'){
      result = "LXX" + result;
    } else if (numString[0] == '8'){
      result = "LXXX" + result;
    } else if (numString[0] == '9'){
      result = "XC" + result;
    }


  } else if (numString.length() == 1){


    if (numString[0] == '1'){
      result = "I";
    } else if (numString[0] == '2'){
      result = "II";
    } else if (numString[0] == '3'){
      result = "III";
    } else if (numString[0] == '4'){
      result = "IV";
    } else if (numString[0] == '5'){
      result = "V";
    } else if (numString[0] == '6'){
      result = "VI";
    } else if (numString[0] == '7'){
      result = "VII";
    } else if (numString[0] == '8'){
      result = "VIII";
    } else if (numString[0] == '9'){
      result = "IX";
    }


  }

  std::cout << result;


}
