//В чашку Петри добавляется W капель воды, D капель чистого антибиотика и подселяется N королебактерий. Известно, что каждую минуту количество бактерий изменяется прямо пропорционально концентрации антибиотика в растворе по формуле Nnew = 2*Nold - Nold * D / W, где Nold — количество королебактерий минуту назад, Nnew — их новое количество, а D / W — концентрация действующего антибиотика. При этом каждую минуту 20% от всего количества антибиотика разлагается и больше не действует.

#include <iostream>

int main() {

  int drops;
  int water;
  int bacteria;

  std::cout << "Какое количесто капель антибиотика было введено?   ";
  std::cin >> drops;
  while(drops <= 0){
    std::cout << "Предполагается, что введенное значение будет являться целым положительным числом больше нуля.\n";
    std::cout << "Какое количесто капель антибиотика было введено?   ";
    std::cin >> drops;
  }

  std::cout << "Какое количество капель воды было введено?   ";
  std::cin >> water;
  while(water <= 0){
    std::cout << "Предполагается, что введенное значение будет являться целым положительным числом больше нуля.\n";
    std::cout << "Какое количество капель воды было введено?   ";
    std::cin >> water;
  }

  std::cout << "Какое количество бактерий было подсажено для начала эксперимента?   ";
  std::cin >> bacteria;
  while(bacteria <= 0){
    std::cout << "Предполагается, что введенное значение будет являться целым положительным числом больше нуля.\n";
    std::cout << "Какое количество бактерий было подсажено для начала эксперимента?   ";
    std::cin >> bacteria;
  }

  std::cout << "\n\n\n";

  float concentration = (drops / water);
  
  for (int iterrations = 1; iterrations <= 20; iterrations++){
    if (bacteria == 0){
      break;
    }
    std::cout << "Прошло " << iterrations << " минут.\n";
    concentration *= 0.8;
    bacteria = (2 * bacteria) - bacteria * concentration;
    if (bacteria <= 0){
      bacteria = 0;
    }
    std::cout << "Количество Бактерий равно " << bacteria << ".\n";
  }

  if (bacteria == 0){
    std::cout << "Бактерии побеждены!\n";
  } else {
    std::cout << "Вирус победил...\n";
  }
}
