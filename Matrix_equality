#include <iostream>

void Compare (int matA[4][4], int matB[4][4]){

  bool equal = true;

  for (int c = 0; c < 4; c++){
    for (int d = 0; d < 4; d++){
      if(matA[c][d] != matB[c][d]){
        equal = false;
        break;
      }
    }
  }

  if (equal == false){
    std::cout << "These matrices are not equal!\n";
  } else {
    std::cout << "These matrices are equal!\n";
  }

}

int main() {
  int matrixA[4][4];
  int matrixB[4][4];

  std::cout << "Please, enter the values for the first matrix\n";
  for (int i = 0; i < 4; i++){
    for (int j = 0; j < 4; j++){
      std::cin >> matrixA[i][j];
    }
    std::cout << std::endl;
  }

  std::cout << "Please, enter the values for the second matrix\n";
  for (int i = 0; i < 4; i++){
    for (int j = 0; j < 4; j++){
      std::cin >> matrixB[i][j];
    }
    std::cout << std::endl;
  }

  std::cout << "\n\n";
  Compare(matrixA, matrixB);
}
