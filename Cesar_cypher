#include <iostream>

std::string encrypt(std::string text, int a){
  for (int i = 0; i < text.length(); i++){
    if(text[i] >= 'A' && text[i] <= 'Z'){
      text[i] += (a % 26);
      if (text[i] > 'Z'){
        text[i] -= 26;
      }
    } else if (text[i] >= 'a' && text[i] <= 'z'){
      text[i] += (a % 26);
      if (text[i] > 'z'){
        text[i] -= 26;
      }
    }
  }
  return text;
}

std::string decrypt(std::string text, int a){
  encrypt(text, -a);
  return text;
}

int main() {
  std::string lol = "z";
  std::cout << encrypt(lol, 27) << "\n";
  std::cout << decrypt(lol, 27);
}
